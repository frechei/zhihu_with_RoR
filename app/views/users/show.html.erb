<% title(@user.name) %>
<div>
  <aside class="row">
    <section>
      <h1>
        <%= render partial: "avatar", locals: {user: @user} %>
        <%= @user.name %>
      </h1>
      <% if current_user.admin?%>
        <%= link_to "删除用户", @user, method: :delete,
                    data: { confirm: "确定？" } %>
      <% end %>

      <section class="stats">
        <%= render 'shared/stats' %>
      </section>

      <%= render 'follow_form' if logged_in? %>
    </section>
  </aside>
</div>

