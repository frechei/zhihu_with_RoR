<% activities.each do |activity| %>
  <div class="activity-owner-img">
    <% if activity.owner.avatar_url(:normal) != nil %>
      <%= image_tag(activity.owner.avatar_url(:normal), size: "35") %>
    <% else %>
      <%= letter_avatar_tag(activity.owner.username_for_avatar, 35, class: 'av') %>
    <% end %>
    
  </div>
	<div class="current-user-activities activities">
  	<%= link_to activity.owner.name, activity.owner, class: "activity-owner" if activity.owner %>
  	<%= render_activity activity %>
	</div>
<% end %>

