<% @user ||= current_user %>
<div class="stats">
  <a href="<% following_user_url(@user) %>">
    关注了
     <strong id="following" class="stat">
       <%= @user.following.count %>
     </strong>
  </a>
  <a href="<% followers_user_url(@user) %>">
    关注者
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
  </a>
</div>