<% title "忘记密码" %>
<div class="pw-container">
  <div class="pw-main">
    <div class="pw-header">
      <h1 class="pw-title">忘记密码</h1>
    </div>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(:password_reset, url: password_resets_path) do |f| %>
          <%= f.label :email, "邮件地址" %>
          <%= f.email_field :email, class: 'form-control' %>

          <%= f.submit "提交", class: "btn btn-primary pw-button-big" %>
        <% end %>
      </div>
    </div>
  </div>
</div>